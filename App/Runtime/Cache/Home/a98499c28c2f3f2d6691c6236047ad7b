<script>
    $(function() {
        $(".time").slick({
            autoplay: false,
            arrows: true,
            dots: false,
            centerMode: true,
            centerPadding: "0px",
            autoplaySpeed: 4000,
            slidesToShow: 3,
            touchMove: false,
            focusOnSelect:true,
            asNavFor: ".timecontent"
        });
        $(".timecontent").slick({
            autoplay: false,
            arrows: false,
            dots: false,
			touchMove: false,
            centerPadding: "0px",
            autoplaySpeed: 4000,
            slidesToShow: 1,
            asNavFor: ".time"
        });
        $(".r").find("p").hover(function() {
            $(".r").find("p").removeClass("act");
            $(this).addClass("act");
            var i = $(this).attr("data-img");
            $(".l").find("img").removeClass("act");
            $(".l").find("img").filter("[data-img=" + i + "]").addClass("act");
        });
        $(".time").find("button").click(function(){
            $(".r").find("p").removeClass("act");
        })
        $(".time").find(".item").click(function(){
            $(".r").find("p").removeClass("act");
        })
    });
</script>



